{% extends 'base.html.twig' %}

{% block title %}Weather Forecast{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">Submit</button>
    {{ form_end(form) }}

    {% if weatherData %}
        <h2>Data from Open Meteo</h2>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Max Temperature (C)</th>
                <th>Min Temperature (C)</th>
                <th>Precipitation (mm)</th>
            </tr>
            </thead>

            <tbody>
            {% for i in 0..weatherData.daily.time|length - 1 %}
                <tr>
                    <td>{{ weatherData.daily.time[i] }}</td>
                    <td>{{ weatherData.daily.temperature_2m_max[i] }}</td>
                    <td>{{ weatherData.daily.temperature_2m_min[i] }}</td>
                    <td>{{ weatherData.daily.precipitation_sum[i] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
